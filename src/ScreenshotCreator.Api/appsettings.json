{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.DataProtection": "Error"
      // not relevant for this app as it contains no secrets, i.e. it's safe to ignore the runtime warnings during startup
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.FFFK "
      }
    }
  },
  "AllowedHosts": "*",
  "ScreenshotOptions": {
    "Width": 800,
    "Height": 480,
    "RefreshIntervalInSeconds": 120,
    "TimeBetweenHttpCallsInSeconds": 10,
    "BackgroundProcessingEnabled": true
  }
}
